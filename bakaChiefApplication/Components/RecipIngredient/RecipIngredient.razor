<div class="recip-ingredient">
    <div>@CurrentRecipIngredient.Ingredient.Name</div>

    <div>
        <CustomInputNumber @bind-Value="CurrentRecipIngredient.Quantity" />
    </div>

    @if (Icon != @Enums.Icon.NotSet && Size != @Enums.Size.NotSet && Style != @Enums.Style.NotSet)
    {
        <div class="tag-icon" @onclick="OnIconClick">
            <Icon IconSvgEnum="Icon" IconSize="Size" IconStyle="Style" />
        </div>
    }
</div>