@using bakaChiefApplication.Constants;


<div class="tag" @onclick="Onclick">

    @if (IsAddable)
    {
        <div class="add-tag-icon">@((MarkupString)SvgConstants.PlusSvg)</div>
    }

    <div class="tag-content">@Content</div>

    @if (IsRemovable)
    {
        <div class="remove-tag-icon" @onclick="Onclick">@((MarkupString)SvgConstants.CrossSvg)</div>
    }
</div>