@page "/ingredients"
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<h3>Ingredients</h3>

@* Add button *@
<div>
    <Button Type="button" Text="+" OnClickCallback="@(async () => await RedirectToIngredientForm(Enums.FormMode.Creation))" />
</div>

@* Search ingredient *@
<IngredientsSearch
    OnTagClickCallback="@((ingredient) => RedirectToIngredientForm(Enums.FormMode.Update, ingredient.Id))" Take="SearchConstants.DefaultNumberOfItemsToTake" />

@* Show more button *@
<FlottedButton Text="Show more" OnClickCallback="@(ShowMoreIngredients)" />