@page "/recipTypes"
@inherits Fluxor.Blazor.Web.Components.FluxorComponent

@* Add button *@
<RadzenRow AlignItems="AlignItems.Center"
           JustifyContent="JustifyContent.Center"
           class="rz-p-1">
    <RadzenColumn Size="2">
        <RadzenButton Icon="add"
                      Click="@(async () => await RedirectToRecipTypeForm(Enums.FormMode.Creation))"
                      ButtonStyle="ButtonStyle.Secondary"
                      IconColor="@Radzen.Colors.Primary"
                      Size="ButtonSize.Large" />
    </RadzenColumn>

    <RadzenColumn Size="10">
        <RadzenText Text="@LabelTranslationsLocalizer["RecipTypes"]"
                    TextStyle="TextStyle.DisplayH3"
                    Style="color:var(--rz-secondary)" />
    </RadzenColumn>
</RadzenRow>

@* Search Recip types *@
<RecipTypesSearch OnTagClickCallback="@((RecipType) => RedirectToRecipTypeForm(Enums.FormMode.Update, RecipType.Id))" />

@* Show more *@
<FlottedButton Text="Show more" OnClickCallback="@(ShowMoreRecipTypes)" />